    "joi": "^5.1.0",
    "koa": "^0.15.0",
    "koa-better-body": "^1.0.16",
    "koa-cors": "0.0.14",
    "koa-json": "^1.1.1",
    "koa-jwt": "^0.1.7",
    "koa-logger": "^1.2.2",
    "koa-router": "^3.8.0",
    "koa-send": "^1.3.1",
    "koa-static": "^1.4.9",
