{
  "name": "mzuka-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "capp": "lsc app.ls -cbo deploy",
    "commit": "git add . && git commit -m '&yet'",
    "test": "npm run compile && nodemon --harmony deploy/app",
    "compile": "npm run capp && npm run cmod && npm run cmid",
    "cmod": "lsc models/* -cbo deploy/models --nodejs --harmony",
    "stage": "pm2 kill && git pull && npm install && npm run start",
    "start": "pm2 start app.js --node-args='--harmony' && pm2 info app",
    "cmid": "lsc middleware/* -cbo deploy/middleware --nodejs --harmony",
    "deploy": "cp package.json deploy && npm run compile && cd deploy && npm run commit && git push"
  },
  "author": "kharhys <kelgitonga@gmail.com> (https://github.com/kharhys)",
